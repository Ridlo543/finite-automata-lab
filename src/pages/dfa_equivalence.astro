---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Minimize DFA">
  <main class="container mx-auto my-4 pt-8">
    <h1 class="text-4xl font-bold text-center mt-16 mb-6">
      Equivalence DFA Check
    </h1>
    <div class="bg-white sm:p-6 p-2 mx-4 rounded shadow mb-4">
      <!-- INPUT CONTENT DFA 1-->
      <div class="px-8 py-8">
        <form id="automataForm1" class="space-y-4">
          <h2 class="text-2xl font-bold">DFA 1</h2>
          <div>
            <label for="states1" class="block mb-2"
              >States (comma-separated):</label
            >
            <input id="states1" type="text" class="rounded-md border p-2" />
          </div>
          <div>
            <label for="alphabet1" class="block mb-2"
              >Alphabet (comma-separated):</label
            >
            <input id="alphabet1" type="text" class="rounded-md border p-2" />
          </div>
          <div>
            <label for="initialState1" class="block mb-2">Initial State:</label>
            <input
              id="initialState1"
              type="text"
              class="rounded-md border p-2"
            />
          </div>
          <div>
            <label for="finalState1" class="block mb-2"
              >Final States (comma-separated):</label
            >
            <input id="finalState1" type="text" class="rounded-md border p-2" />
          </div>
          <div id="transitionsDiv1" class="space-y-2">
            <!-- Transitions will be inserted here by JS -->
          </div>
          <div class="flex flex-col sm:flex-row gap-1 sm:gap-4 justify-between">
            <div></div>
            <div>
              <button
                id="exampleButton1"
                type="button"
                class="inline-flex items-center justify-center rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 lucide lucide-shuffle"
                  ><path
                    d="M2 18h1.4c1.3 0 2.5-.6 3.3-1.7l6.1-8.6c.7-1.1 2-1.7 3.3-1.7H22"
                  ></path><path d="m18 2 4 4-4 4"></path><path
                    d="M2 6h1.9c1.5 0 2.9.9 3.6 2.2"></path><path
                    d="M22 18h-5.9c-1.3 0-2.6-.7-3.3-1.8l-.5-.8"></path><path
                    d="m18 14 4 4-4 4"></path></svg
                >Example</button
              >
              <button
                id="resetButton1"
                type="button"
                class="inline-flex items-center justify-center rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 lucide lucide-trash-2"
                  ><path d="M3 6h18"></path><path
                    d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path
                    d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path><line
                    x1="10"
                    x2="10"
                    y1="11"
                    y2="17"></line><line x1="14" x2="14" y1="11" y2="17"
                  ></line></svg
                >Reset</button
              >
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="bg-white sm:p-6 p-2 mx-4 rounded shadow">
      <!-- INPUT CONTENT DFA 2 -->
      <div class="px-8 py-8">
        <form id="automataForm2" class="space-y-4">
          <h2 class="text-2xl font-bold">DFA 2</h2>
          <div>
            <label for="states2" class="block mb-2"
              >States (comma-separated):</label
            >
            <input id="states2" type="text" class="rounded-md border p-2" />
          </div>
          <div>
            <label for="alphabet2" class="block mb-2"
              >Alphabet (comma-separated):</label
            >
            <input id="alphabet2" type="text" class="rounded-md border p-2" />
          </div>
          <div>
            <label for="initialState2" class="block mb-2">Initial State:</label>
            <input
              id="initialState2"
              type="text"
              class="rounded-md border p-2"
            />
          </div>
          <div>
            <label for="finalState2" class="block mb-2"
              >Final States (comma-separated):</label
            >
            <input id="finalState2" type="text" class="rounded-md border p-2" />
          </div>
          <div id="transitionsDiv2" class="space-y-2">
            <!-- Transitions will be inserted here by JS -->
          </div>

          <div class="flex flex-col sm:flex-row gap-1 sm:gap-4 justify-between">
            <div></div>
            <div>
              <button
                id="exampleButton2"
                type="button"
                class="inline-flex items-center justify-center rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 lucide lucide-shuffle"
                  ><path
                    d="M2 18h1.4c1.3 0 2.5-.6 3.3-1.7l6.1-8.6c.7-1.1 2-1.7 3.3-1.7H22"
                  ></path><path d="m18 2 4 4-4 4"></path><path
                    d="M2 6h1.9c1.5 0 2.9.9 3.6 2.2"></path><path
                    d="M22 18h-5.9c-1.3 0-2.6-.7-3.3-1.8l-.5-.8"></path><path
                    d="m18 14 4 4-4 4"></path></svg
                >Example</button
              >
              <button
                id="resetButton2"
                type="button"
                class="inline-flex items-center justify-center rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 lucide lucide-trash-2"
                  ><path d="M3 6h18"></path><path
                    d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path
                    d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path><line
                    x1="10"
                    x2="10"
                    y1="11"
                    y2="17"></line><line x1="14" x2="14" y1="11" y2="17"
                  ></line></svg
                >Reset</button
              >
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- button check equivalence -->
    <button
      id="checkEquivalenceButton"
      type="button"
      class="inline-flex items-center justify-center rounded-md px-4 py-2 my-4 mx-4 bg-violet-800 hover:bg-violet-600 text-white"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="mr-2 lucide lucide-flask-conical"
        ><path
          d="M10 2v7.527a2 2 0 0 1-.211.896L4.72 20.55a1 1 0 0 0 .9 1.45h12.76a1 1 0 0 0 .9-1.45l-5.069-10.127A2 2 0 0 1 14 9.527V2"
        ></path><path d="M8.5 2h7"></path><path d="M7 16h10"></path></svg
      >Check Equivalence
    </button>

    <!-- Graph result -->
    <div class="flex flex-col sm:flex-row px-8 gap-6 justify-around">
      <div class="w-full sm:w-1/2 text-center justify-center items-center">
        <div id="graphResult1" class="mt-8"></div>
      </div>
      <div class="w-full sm:w-1/2 text-center justify-center items-center">
        <div id="graphResult2" class="mt-8"></div>
      </div>
    </div>

    <!-- Transition Equivalence Result -->
    <div id="EquivalenceTableResult" class="mb-8"></div>
  </main>

  <script src="../script/_4-dfa-equivalence/form-handler-eq.js"></script>
  <!-- <script src="../script/automaton-drawer.js"></script> -->
  <script src="../script/_4-dfa-equivalence/dfa-equivalence.js"></script>
  <script src="../script/_4-dfa-equivalence/util-4.js"></script>
</Layout>
