---
// convert-nfa-to-dfa.astro
import Layout from "src/layouts/Layout.astro";
---

<Layout title="NFA to DFA">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mt-16 mb-6">
      Convert NFA to DFA
    </h1>
    <div class="bg-white rounded shadow">
      <!-- INPUT CONTENT -->
      <div class="px-8 py-8">
        <h2 class="text-2xl font-bold mb-4">Input NFA/ε-NFA</h2>
        <form id="automataForm" class="space-y-4">
          <div>
            <label for="states" class="block mb-2"
              >States (comma-separated):</label
            >
            <input id="states" type="text" class="rounded-md border p-2" />
          </div>
          <div>
            <label for="alphabet" class="block mb-2"
              >Alphabet (comma-separated) (inludes eps for ε : epsilon):</label
            >
            <input id="alphabet" type="text" class="rounded-md border p-2" />
          </div>
          <div>
            <label for="initialState" class="block mb-2">Initial State:</label>
            <input
              id="initialState"
              type="text"
              class="rounded-md border p-2"
            />
          </div>
          <div>
            <label for="finalState" class="block mb-2"
              >Final States (comma-separated):</label
            >
            <input id="finalState" type="text" class="rounded-md border p-2" />
          </div>
          <div id="transitionsDiv" class="space-y-2">
            <!-- Transitions will be inserted here by JS -->
          </div>
          <div class="flex flex-col sm:flex-row gap-1 sm:gap-4 justify-between">
            <div>
              <button
                id="convertButtonToDFA"
                type="button"
                class="inline-flex items-center justify-center rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 lucide lucide-pen-tool"
                  ><path
                    d="M15.707 21.293a1 1 0 0 1-1.414 0l-1.586-1.586a1 1 0 0 1 0-1.414l5.586-5.586a1 1 0 0 1 1.414 0l1.586 1.586a1 1 0 0 1 0 1.414z"
                  ></path><path
                    d="m18 13-1.375-6.874a1 1 0 0 0-.746-.776L3.235 2.028a1 1 0 0 0-1.207 1.207L5.35 15.879a1 1 0 0 0 .776.746L13 18"
                  ></path><path d="m2.3 2.3 7.286 7.286"></path><circle
                    cx="11"
                    cy="11"
                    r="2"></circle></svg
                >Convert to DFA</button
              >
            </div>
            <div>
              <button
                id="exampleButton"
                type="button"
                class="inline-flex items-center justify-center rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 lucide lucide-shuffle"
                  ><path
                    d="M2 18h1.4c1.3 0 2.5-.6 3.3-1.7l6.1-8.6c.7-1.1 2-1.7 3.3-1.7H22"
                  ></path><path d="m18 2 4 4-4 4"></path><path
                    d="M2 6h1.9c1.5 0 2.9.9 3.6 2.2"></path><path
                    d="M22 18h-5.9c-1.3 0-2.6-.7-3.3-1.8l-.5-.8"></path><path
                    d="m18 14 4 4-4 4"></path></svg
                >Example</button
              >
              <button
                id="resetButton"
                type="button"
                class="inline-flex items-center justify-center rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="mr-2 lucide lucide-trash-2"
                  ><path d="M3 6h18"></path><path
                    d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path
                    d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path><line
                    x1="10"
                    x2="10"
                    y1="11"
                    y2="17"></line><line x1="14" x2="14" y1="11" y2="17"
                  ></line></svg
                >Reset</button
              >
            </div>
          </div>
        </form>
      </div>
      <div id="dfaTransitions"></div>
    </div>
    <!-- GRAPH CONTENT -->
    <div class="flex flex-col sm:flex-row px-8 gap-6 justify-around">
      <div class="w-full sm:w-1/2 text-center justify-center items-center">
        <div id="graphNFA" class="mt-8"></div>
      </div>
      <div class="w-full sm:w-1/2 text-center justify-center items-center">
        <div id="graphDFA" class="mt-8"></div>
      </div>
    </div>
    <div id="dfaTable"></div>

    <script src="../script/automaton-drawer.js"></script>
    <script src="../script/form-handler.js"></script>
    <script src="../script/_1-convert-nfa-enfa-to-dfa/nfa-to-dfa.js"></script>
    <script src="../script/_1-convert-nfa-enfa-to-dfa/util1.js"></script>
  </main>
</Layout>
