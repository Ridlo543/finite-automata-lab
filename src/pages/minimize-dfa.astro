---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Minimize DFA">
  <main class="container mx-auto my-4 pt-8">
    <h1 class="text-4xl text-center mt-16">Minimize DFA</h1>
    <!-- INPUT CONTENT -->
    <div class="px-8 py-8">
      <form id="dfaForm" class="space-y-4">
        <div>
          <label for="states" class="block mb-2"
            >States (comma-separated):</label
          >
          <input id="states" type="text" class="rounded-md border p-2" />
        </div>
        <div>
          <label for="alphabet" class="block mb-2"
            >Alphabet (comma-separated):</label
          >
          <input id="alphabet" type="text" class="rounded-md border p-2" />
        </div>
        <div>
          <label for="initialState" class="block mb-2">Initial State:</label>
          <input id="initialState" type="text" class="rounded-md border p-2" />
        </div>
        <div>
          <label for="finalState" class="block mb-2"
            >Final States (comma-separated):</label
          >
          <input id="finalState" type="text" class="rounded-md border p-2" />
        </div>
        <div id="transitionsDiv" class="space-y-2">
          <!-- Transitions will be inserted here by JS -->
        </div>
        <div class="flex gap-4 justify-between">
          <div>
            <button
              type="submit"
              class="rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
              >Draw Graph</button
            >
            <button
              id="minimizeButton"
              type="button"
              class="rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
              >Minimize DFA</button
            >
            <button
              id="tableFillingButton"
              type="button"
              class="rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
            >
              Minimize DFA (Table Filling)
            </button>
          </div>
          <div>
            <button
              id="exampleButton"
              type="button"
              class="rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
              >Example</button
            >
            <button
              id="resetButton"
              type="button"
              class="rounded-md px-4 py-2 my-1 mx-1 bg-violet-800 hover:bg-violet-600 text-white"
              >Reset</button
            >
          </div>
        </div>
      </form>
    </div>

    <!-- GRAPH CONTENT -->
    <div class="flex flex-col sm:flex-row px-8 gap-6 justify-around">
      <div class="w-full sm:w-1/2 text-center justify-center items-center">
        <div id="originalGraphDiv" class="mt-8"></div>
      </div>
      <div class="w-full sm:w-1/2 text-center justify-center items-center">
        <div id="minimizedGraphDiv" class="mt-8"></div>
      </div>
    </div>
    <div id="equivalenceSteps" class="mt-8 p-4"></div>
    <div id="tableFillingSteps" class="mt=8 p-4"></div>
  </main>

  <script src="../script/automaton-drawer.js"></script>
  <script src="../script/dfa-minimizer.js"></script>
  <script src="../script/dfa-table-filling.js"></script>
  <script src="../script/util.js"></script>
</Layout>
