---
interface Card {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props as Card;
---

<div
  class="bg-white hover:bg-gray-100 p-6 rounded-lg shadow-lg md:w-96 w-full transition-all duration-300"
>
  <a data-astro-reload href={href}>
    <div>
      <h2 class="text-lg font-semibold">{title}</h2>
      <p class="text-sm">{body}</p>
    </div>
  </a>
</div>
