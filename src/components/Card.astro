---
interface Card {
  title: string;
  body?: string;
  href: string;
}

const { href, title, body } = Astro.props as Card;
---

<div class="w-full sm:w-auto text-center">
  <a
    data-astro-reload
    href={href}
    class="bg-white hover:bg-gray-100 flex items-center justify-center p-6 rounded-lg shadow-lg min-h-32 md:w-96 w-full transition-all duration-300"
  >
    <div>
      <h2 class="text-lg font-semibold">{title}</h2>
      <!-- <p class="text-sm">{body}</p> -->
    </div>
  </a>
</div>
